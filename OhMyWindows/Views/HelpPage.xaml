<Page
    x:Class="OhMyWindows.Views.HelpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:OhMyWindows.ViewModels"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <ScrollViewer>
            <StackPanel Spacing="16" Margin="16">
                <TextBlock Text="Aide" Style="{ThemeResource TitleLargeTextBlockStyle}"/>
                <TextBlock Text="Comment utiliser OhMyWindows" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <TextBlock TextWrapping="Wrap" Style="{ThemeResource BodyTextBlockStyle}">
                    OhMyWindows est un outil qui vous permet de personnaliser et d'optimiser votre système Windows.
                    Naviguez dans les différentes sections pour découvrir toutes les fonctionnalités disponibles.
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page> 