<Page
    x:Class="OhMyWindows.Views.ProgrammesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:services="using:OhMyWindows.Services"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barre d'outils et recherche -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <CommandBar Grid.Row="0"
                       DefaultLabelPosition="Right"
                       Background="Transparent"
                       IsOpen="False"
                       Margin="0,0,0,10">
                <AppBarButton Icon="Refresh" 
                             Label="Rafraîchir"
                             Command="{x:Bind ViewModel.RefreshProgramsCommand}"/>
                <AppBarButton Icon="Delete" 
                             Label="Désinstaller"
                             Command="{x:Bind ViewModel.UninstallSelectedCommand}"/>
                <AppBarButton Icon="Add" 
                             Label="Installer"
                             Command="{x:Bind ViewModel.InstallSelectedCommand}"/>
                <AppBarButton Icon="SelectAll" 
                             Label="{x:Bind ViewModel.SelectAllButtonText, Mode=OneWay}"
                             Command="{x:Bind ViewModel.ToggleAllSettingsCommand}"/>
                <AppBarButton Icon="List" 
                             Label="Tout déplier"
                             Command="{x:Bind ViewModel.ExpandAllCommand}"/>
            </CommandBar>

            <!-- Barre de recherche et options de tri -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <AutoSuggestBox Grid.Column="0"
                               PlaceholderText="Rechercher un programme..."
                               Text="{x:Bind ViewModel.SearchText, Mode=TwoWay}"
                               QueryIcon="Find"
                               Margin="0,0,10,0"/>

                <ComboBox Grid.Column="1"
                         Header="Trier par"
                         ItemsSource="{x:Bind ViewModel.SortOptions}"
                         SelectedItem="{x:Bind ViewModel.SortOption, Mode=TwoWay}"
                         MinWidth="150"/>
            </Grid>
        </Grid>

        <!-- Liste des programmes -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollMode="Auto" 
                     VerticalScrollBarVisibility="Auto">
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.InstalledPrograms, Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <StackLayout Spacing="8"/>
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="services:InstalledProgram">
                        <Expander IsExpanded="{x:Bind IsSelected, Mode=OneWay}"
                                 HorizontalAlignment="Stretch"
                                 Margin="0,4">
                            <Expander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Grid.Column="0" 
                                            IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                            Margin="0,0,12,0"/>
                                    <TextBlock Grid.Column="1" 
                                             Text="{x:Bind Name}" 
                                             VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                             Text="{x:Bind Version}" 
                                             Opacity="0.6"
                                             Margin="12,0,0,0"
                                             VerticalAlignment="Center"/>
                                </Grid>
                            </Expander.Header>
                            <StackPanel Margin="32,8,0,8" Spacing="8">
                                <TextBlock>
                                    <Run Text="Éditeur : "/>
                                    <Run Text="{x:Bind Publisher}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Date d'installation : "/>
                                    <Run Text="{x:Bind InstallDate}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Taille : "/>
                                    <Run Text="{x:Bind EstimatedSize}"/>
                                    <Run Text=" Ko"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Emplacement : "/>
                                    <Run Text="{x:Bind InstallLocation}"/>
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap">
                                    <Run Text="Commande de désinstallation : "/>
                                    <Run Text="{x:Bind UninstallString}"/>
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap">
                                    <Run Text="Commande de désinstallation silencieuse : "/>
                                    <Run Text="{x:Bind QuietUninstallString}"/>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollViewer>

        <!-- Zone de progression et messages -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Message d'erreur -->
            <controls:InfoBar Grid.Row="0"
                    IsOpen="{x:Bind ViewModel.IsError, Mode=OneWay}"
                    Severity="Error"
                    Title="Erreur"
                    Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                    Margin="0,0,0,8"/>

            <!-- Barre de progression -->
            <Grid Grid.Row="1" 
                  Visibility="{x:Bind ViewModel.IsInstalling, Mode=OneWay}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" 
                         Text="{x:Bind ViewModel.CurrentOperation, Mode=OneWay}"
                         Margin="0,8,0,4"
                         HorizontalAlignment="Center"/>
                <ProgressBar Grid.Row="1" 
                           Value="{x:Bind ViewModel.InstallProgress, Mode=OneWay}"
                           Maximum="100"
                           Margin="0,0,0,8"/>
            </Grid>
        </Grid>

        <!-- Boîte de dialogue de confirmation -->
        <ContentDialog x:Name="UninstallConfirmationDialog"
                      Title="Confirmation de désinstallation"
                      PrimaryButtonText="Désinstaller"
                    CloseButtonText="Annuler"
                    DefaultButton="Close"
                    XamlRoot="{x:Bind ContentArea.XamlRoot}">
            <TextBlock Text="Êtes-vous sûr de vouloir désinstaller les programmes sélectionnés ?" 
                     TextWrapping="Wrap"/>
        </ContentDialog>
    </Grid>
</Page>
