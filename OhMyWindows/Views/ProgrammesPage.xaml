<Page
    x:Class="OhMyWindows.Views.ProgrammesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:services="using:OhMyWindows.Services"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:converters="using:OhMyWindows.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:SizeConverter x:Key="SizeConverter"/>
        <converters:BooleanToRotationConverter x:Key="BooleanToRotationConverter"/>
        <x:Double x:Key="ListItemHeight">64</x:Double>
        <Thickness x:Key="ListItemPadding">16,8</Thickness>
    </Page.Resources>

    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barre d'outils et recherche -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <CommandBar Grid.Row="0"
                       DefaultLabelPosition="Right"
                       Background="Transparent"
                       IsOpen="False"
                       Margin="0,0,0,10">
                <AppBarButton Icon="Refresh" 
                             Label="Rafraîchir"
                             Command="{x:Bind ViewModel.RefreshProgramsCommand}"/>
                <AppBarButton Icon="Delete" 
                             Label="Désinstaller"
                             Command="{x:Bind ViewModel.UninstallSelectedCommand}"/>
                <AppBarButton Icon="Add" 
                             Label="Installer"
                             Command="{x:Bind ViewModel.InstallSelectedCommand}"/>
                <AppBarButton Icon="SelectAll" 
                             Label="{x:Bind ViewModel.SelectAllButtonText, Mode=OneWay}"
                             Command="{x:Bind ViewModel.ToggleAllSettingsCommand}"/>
                <AppBarButton Icon="List" 
                             Label="Tout déplier"
                             Command="{x:Bind ViewModel.ExpandAllCommand}"/>
            </CommandBar>

            <!-- Barre de recherche et options de tri -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <AutoSuggestBox Grid.Column="0"
                               PlaceholderText="Rechercher un programme..."
                               Text="{x:Bind ViewModel.SearchText, Mode=TwoWay}"
                               QueryIcon="Find"
                               Height="32"
                               Margin="0,0,10,0"/>

                <ComboBox Grid.Column="1"
                         ItemsSource="{x:Bind ViewModel.SortOptions}"
                         SelectedItem="{x:Bind ViewModel.SortOption, Mode=TwoWay}"
                         Height="32"
                         MinWidth="150"
                         Margin="0,0,10,0"/>

                <Button Grid.Column="2"
                        Command="{x:Bind ViewModel.ToggleSortOrderCommand}"
                        Height="32"
                        Width="32">
                    <FontIcon Glyph="&#xE74B;"
                             RenderTransform="{x:Bind ViewModel.SortDescending, Mode=OneWay, Converter={StaticResource BooleanToRotationConverter}}"/>
                </Button>
            </Grid>
        </Grid>

        <!-- Liste des programmes -->
        <ListView Grid.Row="1" 
                 ItemsSource="{x:Bind ViewModel.InstalledPrograms, Mode=OneWay}"
                 SelectionMode="Multiple"
                 Margin="0,10">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="MinHeight" Value="{StaticResource ListItemHeight}"/>
                    <Setter Property="Padding" Value="{StaticResource ListItemPadding}"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="services:InstalledProgram">
                    <Grid VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Checkbox -->
                        <CheckBox Grid.Row="0" Grid.RowSpan="2"
                                Grid.Column="0"
                                IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                Margin="0,0,12,0"
                                VerticalAlignment="Center"/>

                        <!-- Nom du programme -->
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                 Text="{x:Bind Name}"
                                 FontWeight="SemiBold"/>

                        <!-- Version | Éditeur | Date d'installation -->
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                 Opacity="0.8"
                                 FontSize="12"
                                 Margin="0,4,0,0">
                            <Run Text="{x:Bind Version}"/>
                            <Run Text=" | "/>
                            <Run Text="{x:Bind Publisher}"/>
                            <Run Text=" | "/>
                            <Run Text="{x:Bind InstallDate}"/>
                        </TextBlock>

                        <!-- Taille -->
                        <TextBlock Grid.Row="0" Grid.RowSpan="2" Grid.Column="2"
                                 Text="{x:Bind EstimatedSize, Converter={StaticResource SizeConverter}}"
                                 VerticalAlignment="Center"
                                 Margin="12,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Zone de progression et messages -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Message d'erreur -->
            <controls:InfoBar Grid.Row="0"
                    IsOpen="{x:Bind ViewModel.IsError, Mode=OneWay}"
                    Severity="Error"
                    Title="Erreur"
                    Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                    Margin="0,0,0,8"/>

            <!-- Barre de progression -->
            <Grid Grid.Row="1" 
                  Visibility="{x:Bind ViewModel.IsInstalling, Mode=OneWay}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" 
                         Text="{x:Bind ViewModel.CurrentOperation, Mode=OneWay}"
                         Margin="0,8,0,4"
                         HorizontalAlignment="Center"/>
                <ProgressBar Grid.Row="1" 
                           Value="{x:Bind ViewModel.InstallProgress, Mode=OneWay}"
                           Maximum="100"
                           Margin="0,0,0,8"/>
            </Grid>
        </Grid>

        <!-- Boîte de dialogue de confirmation -->
        <ContentDialog x:Name="UninstallConfirmationDialog"
                      Title="Confirmation de désinstallation"
                      PrimaryButtonText="Désinstaller"
                    CloseButtonText="Annuler"
                    DefaultButton="Close"
                    XamlRoot="{x:Bind ContentArea.XamlRoot}">
            <TextBlock Text="Êtes-vous sûr de vouloir désinstaller les programmes sélectionnés ?" 
                     TextWrapping="Wrap"/>
        </ContentDialog>
    </Grid>
</Page>
