<Page
    x:Class="OhMyWindows.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:OhMyWindows.ViewModels"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <ScrollViewer>
            <StackPanel Spacing="16" Margin="16">
                <TextBlock Text="OhMyWindows" Style="{ThemeResource TitleLargeTextBlockStyle}"/>
                <TextBlock Text="Version 1.0.0" Style="{ThemeResource BodyTextBlockStyle}"/>
                <TextBlock Text="© 2024 OhMyWindows. Tous droits réservés." Style="{ThemeResource BodyTextBlockStyle}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page> 