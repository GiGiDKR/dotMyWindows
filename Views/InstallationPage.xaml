<Page
    x:Class="OhMyWindows.Views.InstallationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:OhMyWindows.Models"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barre d'outils -->
        <CommandBar Grid.Row="0" DefaultLabelPosition="Right" Background="Transparent">
            <AppBarButton Icon="Refresh" Label="Recharger" Command="{x:Bind ViewModel.LoadPackagesCommand}"/>
            <AppBarButton Icon="Download" Label="Installer" Command="{x:Bind ViewModel.InstallSelectedCommand}"/>
            <AppBarButton Icon="SelectAll" Label="Tout sélectionner" Command="{x:Bind ViewModel.SelectAllCommand}"/>
            <AppBarButton Icon="Scan" Label="{x:Bind ViewModel.IsCheckingPackages, Mode=OneWay, Converter={StaticResource BoolToCheckButtonTextConverter}}"
                         Command="{x:Bind ViewModel.IsCheckingPackages, Mode=OneWay, Converter={StaticResource BoolToCheckCommandConverter}, ConverterParameter={x:Bind ViewModel}}"/>
            <AppBarButton Icon="Clear" Label="Réinitialiser" Command="{x:Bind ViewModel.ResetCheckedCommand}"/>
        </CommandBar>

        <!-- Liste des packages -->
        <ListView Grid.Row="1" 
                  ItemsSource="{x:Bind ViewModel.Packages, Mode=OneWay}"
                  SelectionMode="None"
                  Margin="0,12,0,0">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Package">
                    <Grid Padding="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0" 
                                 IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                 Margin="0,0,12,0"/>

                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="{x:Bind Name}" 
                                     Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                            <TextBlock Text="{x:Bind Id}" 
                                     Style="{ThemeResource CaptionTextBlockStyle}"
                                     Opacity="0.6"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                  Orientation="Horizontal"
                                  Spacing="8">
                            <ProgressRing IsActive="{x:Bind IsChecking, Mode=OneWay}"
                                        Width="20" Height="20"/>
                            <FontIcon Glyph="&#xE73E;"
                                    Visibility="{x:Bind IsInstalled, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Indicateur de chargement -->
        <ProgressRing Grid.Row="1" 
                      IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}"
                      Width="50" Height="50"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"/>
    </Grid>
</Page> 